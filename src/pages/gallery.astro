---
import Layout from "../layouts/Layout.astro";
import gallery from "../data/gallery.json";
---
<Layout title="Gallery â€” Mohammadamin Kafi">
  <section class="space-y-4">
    <h1 class="text-2xl font-bold">Gallery</h1>
    <ul class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
      {gallery.items?.map((g, i) => (
        <li class="card overflow-hidden" key={i}>
          <img src={g.src} alt={g.alt || 'image'} class="w-full h-56 object-cover"/>
          {g.caption && <div class="p-3 text-sm text-zinc-700 dark:text-zinc-300">{g.caption}</div>}
        </li>
      ))}
    </ul>
  </section>
</Layout>