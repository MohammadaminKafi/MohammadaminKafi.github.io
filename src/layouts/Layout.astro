---
import ThemeToggle from "../components/ThemeToggle.jsx";
import "../styles/global.css"; // Tailwind/CSS
const { title = 'Resume' } = Astro.props;
const isGallery = Astro.url.pathname.startsWith('/gallery');
---
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
    <script>
      (function(){
        try {
          const saved = localStorage.getItem('theme');
          if (saved === 'light') document.documentElement.classList.remove('dark');
          else document.documentElement.classList.add('dark');
        } catch (e) {}
      })();
    </script>
  </head>
  <body class="bg-zinc-50 text-zinc-900 dark:bg-zinc-950 dark:text-zinc-100 min-h-screen relative">
    <div class="aurora" aria-hidden="true"></div>

    <header class="relative z-40 sticky top-0 backdrop-blur supports-[backdrop-filter]:bg-white/70 dark:supports-[backdrop-filter]:bg-zinc-900/70 border-b border-black/5 dark:border-white/10">
      <div class="container-pro flex items-center justify-between h-14">
        <a href="/" class="font-semibold tracking-tight">Mohammadamin Kafi</a>
        <div class="flex items-center gap-2">
          <a class="btn" href={isGallery ? '/' : '/gallery'}>{isGallery ? 'Home' : 'Gallery'}</a>
          <ThemeToggle client:load />
        </div>
      </div>
    </header>

    <main class="relative z-10 container-pro py-8">
      <slot />
    </main>
    <footer class="relative z-10 container-pro py-10 text-sm text-zinc-500">Â© {new Date().getFullYear()} Mohammadamin Kafi</footer>
  </body>
</html>
